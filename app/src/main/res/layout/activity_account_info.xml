<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/offwhite"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:padding="20dp"
            android:id="@+id/bck"
            android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:layout_margin="10dp"
            ></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:textStyle="bold"
            android:textSize="30dp"
            android:padding="20dp"
            android:id="@+id/prcnt"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/date"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_centerHorizontal="true"
        android:id="@+id/uname"
        android:src="@drawable/prop"></ImageView>

    <TextView
        android:id="@+id/p_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uname"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:text="Aksh Malhotra"
        android:textSize="22dp"
        android:textStyle="bold"></TextView>


    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/p_name"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:width="300dp"
        android:background="@drawable/round_edit"
        android:gravity="center_vertical"
        android:hint="Name"
        android:longClickable="false"
        android:maxLength="20"
        android:paddingLeft="20dp"></EditText>


    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/username"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:width="300dp"
        android:background="@drawable/round_edit"
        android:gravity="center_vertical"
        android:hint="Email Address"
        android:longClickable="false"
        android:maxLength="20"
        android:paddingLeft="20dp"></EditText>

    <EditText
        android:id="@+id/c_paswd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:width="300dp"
        android:background="@drawable/round_edit"
        android:gravity="center_vertical"
        android:hint="Current Password"
        android:longClickable="false"
        android:maxLength="20"
        android:paddingLeft="20dp"></EditText>

    <EditText
        android:id="@+id/nc_paswd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/c_paswd"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:width="300dp"
        android:background="@drawable/round_edit"
        android:gravity="center_vertical"
        android:hint="New Password"
        android:longClickable="false"
        android:maxLength="20"
        android:paddingLeft="20dp"></EditText>


    <EditText
        android:id="@+id/rnc_paswd"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/nc_paswd"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:width="300dp"
        android:background="@drawable/round_edit"
        android:gravity="center_vertical"
        android:hint="Renter New Password"
        android:longClickable="false"
        android:maxLength="20"
        android:paddingLeft="20dp">
    </EditText>

    <TextView
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/rnc_paswd"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:width="100dp"
        android:background="@drawable/round_button_blue"
        android:gravity="center"
        android:longClickable="false"
        android:text="Register"
        android:textColor="@color/white"
        android:textStyle="bold">

        <requestFocus></requestFocus>
    </TextView>
</RelativeLayout>