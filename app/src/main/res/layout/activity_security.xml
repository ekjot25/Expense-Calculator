<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/offwhite"
    tools:context=".SettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/head"
        android:orientation="horizontal"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:padding="20dp"
            android:id="@+id/bck"
            android:background="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:layout_margin="10dp"
            ></ImageView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Security"
            android:textStyle="bold"
            android:textSize="30dp"
            android:padding="20dp"
            android:id="@+id/prcnt"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/date"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/round_button_blue"
        android:id="@+id/faceid"
        android:layout_below="@+id/head"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingRight="30dp"
        android:layout_marginRight="20dp">

        <Switch
            android:id="@+id/simpleSwitch1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Face ID"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:thumb="@drawable/swtch" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/round_button_blue"
        android:id="@+id/fingerprint"
        android:layout_below="@+id/faceid"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingRight="30dp"
        android:layout_marginRight="20dp">

        <Switch
            android:id="@+id/simpleSwitch2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Fingerprint"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:thumb="@drawable/swtch" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/round_button_blue"
        android:id="@+id/pin"
        android:layout_below="@+id/fingerprint"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:paddingRight="30dp"
        android:layout_marginRight="20dp">

        <Switch
            android:id="@+id/simpleSwitch3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Passcode"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:thumb="@drawable/swtch" />

    </LinearLayout>


</RelativeLayout>